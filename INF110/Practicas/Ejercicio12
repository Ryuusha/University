program Digitar10numerosSacandomedia;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var a,sum,i,divi:integer;

begin
  sum:=0;
  for i := 1 to 10 do
    begin
      writeln('Digite el valor',i,':');
      readln(a);
      sum:=sum+a;
      divi:=sum div 10;
    end;
  writeln('La media es: ');
  writeln(divi);
  readln;
end.
